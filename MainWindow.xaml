<Window x:Class="Visual_filtering_referable_objects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Software de filtrado visual" Height="716" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="541*"/>
            <ColumnDefinition Width="108*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnEnable" Content="Activar reconocimiento de voz" HorizontalAlignment="Left" Height="60" Margin="55,604,0,0" VerticalAlignment="Top" Width="286" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Background="#FFD4FFBF" AutomationProperties.Name="BtnActivate" Grid.Column="2" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.458"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnDisable" Content="Desactivar reconocimiento de voz" HorizontalAlignment="Left" Height="57" Margin="324,606,0,0" VerticalAlignment="Top" Width="300" Background="#FFFFBEBE" Click="Button_Click_1" Grid.Column="3" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock x:Name="showShapesText" HorizontalAlignment="Left" Height="115" Margin="146,472,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Padding="10,10,10,10" Grid.Column="3" Background="#FFEDFCFC"/>
        <Canvas Grid.Column="3">
            <Canvas x:Name="Canvas_" Height="400" Width="600" Canvas.Left="35" Canvas.Top="27" Background="White" Panel.ZIndex="100">
                <Polygon Points="50,0 100,100, 0,100" Stroke="Black" Fill="Black" />
                <Rectangle Stroke="Black" Fill="Black" />
            </Canvas>
            <Rectangle Height="402" Canvas.Left="34" Stroke="Black" Canvas.Top="26" Width="602" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>
    </Grid>
</Window>
