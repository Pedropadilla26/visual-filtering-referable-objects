<Window x:Class="Visual_filtering_referable_objects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Software de filtrado visual" Height="800" Width="1000" Background="White">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Canvas Grid.ColumnSpan="9" Margin="4,0,64,0" HorizontalAlignment="Center">
            <TextBlock Canvas.Left="157" TextWrapping="Wrap" Canvas.Top="137"><Run Language="es-es"/></TextBlock>
        </Canvas>
        <TextBlock x:Name="LastInstruction" Height="22" TextWrapping="Wrap" Margin="132,256,0,0" Width="400"/>

        <Border x:Name="CanvasBorder" BorderThickness="2" 
         BorderBrush="Black" Margin="0,89,0,217" Width="604" Height="405" HorizontalAlignment="Center" CornerRadius="5,5,5,5">
            <Canvas x:Name="Canvas_" Height="400" Width="600" Background="White" Panel.ZIndex="100" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="5" >
                <Rectangle Stroke="Black" Fill="Black" />

            </Canvas>
        </Border>
        <Button x:Name="btnInstructionsGuide" Height="43" Width="200" Background="#FFFFECC3" Click="Button_Instructions_Guide" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderTransformOrigin="0.847,-0.953" Margin="700,0,0,670">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>

                </Style>
            </Button.Resources>
            <StackPanel Orientation="Horizontal">
                <Image Source="/list-solid.png" Width="32" Height="22" RenderTransformOrigin="1,1" HorizontalAlignment="Left"/>
                <TextBlock><Run Text="Guía de comandos"/></TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="btnGenerateRandomCanvas" Height="56" Width="287" Background="#FFCBDCFF" Click="Button_Click_Generate_Random_Canvas" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,670">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>

                </Style>
            </Button.Resources>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.39"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.327"/>
                </TransformGroup>
            </Button.RenderTransform>
            <StackPanel Orientation="Horizontal">
                <Image Source="/shuffle-solid.png" Width="30" Height="22" RenderTransformOrigin="1,1"/>
                <TextBlock><Run Text="Generar un nuevo lienzo aleatorio"/></TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="btnReset" HorizontalAlignment="Stretch" Height="41" VerticalAlignment="Stretch" Width="166" Background="#FFC7BEFF" Click="Button_Click_Reset" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" Margin="0,400,0,0">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Horizontal">
                <Image Source="/arrows-rotate-solid.png" Width="30" Height="22" RenderTransformOrigin="1,1"/>
                <TextBlock><Run Text="Reiniciar lienzo"/></TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="btnNightMode" Height="41" Background="#FF4F4F4F" Click="Button_Night_Mode" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" Margin="0,0,700,670" Width="150">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Horizontal">
                <Image x:Name="nightModeIcon" Source="/moon-white-solid.png" Width="30" Height="22" RenderTransformOrigin="1,1"/>
                <TextBlock x:Name="nightModeText" Foreground="White"><Run Text="Modo noche"/></TextBlock>
            </StackPanel>
        </Button>
        <Grid>
            <Button x:Name="btnVoiceRecognizing" Height="60" Width="338" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Background="#FFD4FFBF" AutomationProperties.Name="BtnActivate" FontSize="14" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,600,0,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.458"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="voiceIcon" Source="/microphone-solid.png" Width="30" Height="22" RenderTransformOrigin="1,1" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="voiceText" Width="268" FontSize="16"><Run Text="Activar reconocimiento de voz"/></TextBlock>
                </StackPanel>
            </Button>
            <Image HorizontalAlignment="Stretch" Height="17" Margin="300,580,0,0" VerticalAlignment="Stretch" Width="17" Source="/circle-info-solid.png">
                <Image.ToolTip>
                    <ToolTip Background="#FFF1FFFE" Width="300">
                        <TextBlock TextWrapping="Wrap"> Puede decir la instrucción 'escúchame' para que se active el reconocimiento de voz y 'deja de escucharme' para desactivarlo.<LineBreak/><LineBreak/>Para más información, consulte la guía de comandos.</TextBlock>
                    </ToolTip>
                </Image.ToolTip>
            </Image>
            <Label x:Name="LastInstructionLabel" Content="Última instrucción recibida: " RenderTransformOrigin="0.483,-0.114" FontWeight="Bold" Margin="0,250,428,0" Height="25" Width="164"/>
        </Grid>


    </Grid>
</Window>
