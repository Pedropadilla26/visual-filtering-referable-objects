<Window x:Class="Visual_filtering_referable_objects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Software de filtrado visual" Height="657" Width="800">
    <Grid Margin="0,0,-183,-81">
        <Grid.RowDefinitions>
            <RowDefinition Height="645*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="485*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnEnable" Content="Activar reconocimiento de voz" HorizontalAlignment="Left" Height="60" Margin="47,474,0,0" VerticalAlignment="Top" Width="286" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Background="#FFD4FFBF" AutomationProperties.Name="BtnActivate" Grid.Column="2" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="3">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.458"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnDisable" Content="Desactivar reconocimiento de voz" HorizontalAlignment="Left" Height="57" Margin="286,477,0,0" VerticalAlignment="Top" Width="300" Background="#FFFFBEBE" Click="Button_Click_1" Grid.Column="4" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Canvas Grid.Column="3" Grid.ColumnSpan="2" Margin="10,0,49,208">
            <Canvas x:Name="Canvas_" Height="400" Width="600" Canvas.Left="12" Canvas.Top="40" Background="White" Panel.ZIndex="100" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Rectangle Stroke="Black" Fill="Black" />
            </Canvas>
            <Rectangle Height="403" Canvas.Left="10" Stroke="Black" Canvas.Top="38" Width="603" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button x:Name="btnReset" Content="Reiniciar" HorizontalAlignment="Center" Height="24" VerticalAlignment="Top" Width="300" Background="#FFC7BEFF" Click="Button_Click_Reset" Grid.Column="3" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2" Canvas.Left="162" Canvas.Top="563">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Canvas>
    </Grid>
</Window>
