<Window x:Class="Visual_filtering_referable_objects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Software de filtrado visual" Height="800" Width="1000" Background="White">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="645*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Canvas Grid.ColumnSpan="9" Margin="4,0,64,0" HorizontalAlignment="Center">
            <Button x:Name="btnReset" HorizontalAlignment="Center" Height="41" VerticalAlignment="Top" Width="184" Background="#FFC7BEFF" Click="Button_Click_Reset" Grid.Column="3" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2" Canvas.Left="-56" Canvas.Top="592">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/arrows-rotate-solid.png" Width="30" Height="22" RenderTransformOrigin="1,1"/>
                        <TextBlock><Run Text="Reiniciar lienzo"/></TextBlock>
                    </StackPanel>
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnGenerateRandomCanvas" Height="56" Width="287" Background="#FFCBDCFF" Click="Button_Click_Generate_Random_Canvas" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" Canvas.Left="-96" Canvas.Top="14" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/shuffle-solid.png" Width="30" Height="22" RenderTransformOrigin="1,1"/>
                        <TextBlock><Run Text="Generar un nuevo lienzo aleatorio"/></TextBlock>
                    </StackPanel>
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="7"/>

                    </Style>
                </Button.Resources>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.39"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.327"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button x:Name="btnGenerateRandomCanvas_Copy" Height="43" Width="200" Background="#FFFFECC3" Click="Button_Click_Generate_Random_Canvas" AutomationProperties.Name="btnDisable" FontSize="14" FontWeight="Bold" Canvas.Top="20" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-448" RenderTransformOrigin="0.847,-0.953">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/list-solid.png" Width="32" Height="22" RenderTransformOrigin="1,1" HorizontalAlignment="Left"/>
                        <TextBlock><Run Text="Guía de instrucciones"/></TextBlock>
                    </StackPanel>
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="7"/>

                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Canvas.Left="157" TextWrapping="Wrap" Canvas.Top="137"><Run Language="es-es"/></TextBlock>
            <Button x:Name="btnVoiceRecognizing" Height="60" Width="338" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Background="#FFD4FFBF" AutomationProperties.Name="BtnActivate" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Canvas.Left="-110" Canvas.Top="666" VerticalAlignment="Center">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/microphone-solid.png" Width="30" Height="22" RenderTransformOrigin="1,1" HorizontalAlignment="Left"/>
                        <TextBlock Width="248" FontSize="16"><Run Text="Activar reconocimiento de voz"/></TextBlock>
                    </StackPanel>
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.458"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </Canvas>
        <TextBlock x:Name="LastInstruction" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Margin="363,499,-307,0"/>
        <Label x:Name="LastInstructionLabel" Content="Última instrucción recibida: " RenderTransformOrigin="0.483,-0.114" HorizontalAlignment="Left" VerticalAlignment="Top" Width="165" FontWeight="Bold" Margin="198,495,0,0"/>

        <Border BorderThickness="2" 
         BorderBrush="Black" Margin="0,89,0,217" Width="604" Height="405" HorizontalAlignment="Center" CornerRadius="5,5,5,5">
            <Canvas x:Name="Canvas_" Height="400" Width="600" Background="White" Panel.ZIndex="100" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="5" >
                <Rectangle Stroke="Black" Fill="Black" />

            </Canvas>
        </Border>
        <Image HorizontalAlignment="Left" Height="17" Margin="672,670,0,0" VerticalAlignment="Top" Width="17" Source="/circle-info-solid.png">
            <Image.ToolTip>
                <ToolTip Background="#FFF1FFFE" Width="300">
                    <TextBlock TextWrapping="Wrap"> Puede decir la instrucción 'escúchame' para que se active el reconocimiento de voz y 'deja de escucharme' para desactivarlo.<LineBreak/><LineBreak/>Para más información, consulte la guía de instrucciones.</TextBlock>
                </ToolTip>
            </Image.ToolTip>
        </Image>

    </Grid>
</Window>
